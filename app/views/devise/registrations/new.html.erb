<main class="form-auth w-100 m-auto">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 fw-normal">Please sign up</h1>
    <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First Name", style: "margin-bottom: 10px" %>
      <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", style: "margin-bottom: 10px" %>
      <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email address", autocomplete: "email", style: "margin-bottom: 10px" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "inputPassword", placeholder: "Password", style: "margin-bottom: 10px" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "inputPassword", placeholder: "Confirm Password", style: "margin-bottom: 10px" %>


    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
  </form>
<% end %>

<%= render "devise/shared/links" %>
</main>
